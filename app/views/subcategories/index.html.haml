.container
  .row
    .col-md-6
      = flash_messages
  .row
    .col-md-3
      %a.btn.btn-default{role: 'button', href: "#{new_subcategory_path}"} Добавить
      %a.btn.btn-default{role: 'button'} Фильтр
  .row
    .col-md-12
      = paginate @subcategories
    .col-md-7
      %table.table.table-hover.table-bordered
        %thead
          %th №
          %th{colspan: '3'} Наименование
        %tbody
          - @subcategories.each_with_index do |subcategory, index|
            %tr
              %td= index.next
              %td= subcategory.name
              %td.col-md-1
                = link_to image_tag('edit-icon.png'), edit_subcategory_path(subcategory), title: 'Редактировать'
              %td.col-md-1
                = link_to image_tag('destroy-icon.png'), subcategory_path(subcategory), method: :delete, title: 'Удалить'
